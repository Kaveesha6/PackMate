<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green"
    android:padding="16dp">

    <ImageView
        android:layout_width="136dp"
        android:layout_height="98dp"
        android:src="@drawable/bag_icon"
        android:transitionName="logo_image" />

    <TextView
        android:layout_width="381dp"
        android:layout_height="90dp"
        android:layout_marginTop="-20dp"
        android:transitionName="logo_text"
        android:textColor="@color/black"
        android:fontFamily="@font/bungee"
        android:text="Pack.."
        android:textSize="40sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your own travelling bag â˜º"
        android:textSize="18sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnSwimPackList"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/category_description"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/swim" />


        <ImageButton
            android:id="@+id/btnHikePackList"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/category_description"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hike" />

        <ImageButton
            android:id="@+id/btnCampPackList"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/category_description"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/camp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBeachPackList"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/category_description"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/beach" />

        <ImageButton
            android:id="@+id/btnBabyNeedsPackList"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/category_description"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baby" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/category_description"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/calendar" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:orientation="horizontal"
        android:padding="2dp">

        <Button
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:fontFamily="@font/bungee"
            android:text="Check List" />

        <Button
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/bungee"
            android:text="Add Your Own List" />


    </LinearLayout>

</LinearLayout>
